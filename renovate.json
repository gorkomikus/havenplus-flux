{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump-minor",
  "flux": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Updates container image versions in .image-versions file",
      "fileMatch": ["\\.image-versions$"],
      "matchStrings": [
        "(?<depName>.*?):(?<currentValue>.*?)$"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
